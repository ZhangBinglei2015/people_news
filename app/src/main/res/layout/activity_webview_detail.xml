<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical">


    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:id="@+id/webview_detail_recyclerview"
        ></com.jcodecraeer.xrecyclerview.XRecyclerView>


    <!-- bottom layout-->
    <LinearLayout
        android:layout_gravity="bottom"
        android:id="@+id/ll_webview_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#dddbdb"
        >

        <ImageView
            android:clickable="true"
            android:id="@+id/iv_webview_news_detail_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_back"
            />

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_corners_edit_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bottom_down_picture_input_pen"
                />

            <TextView
                android:focusable="true"
                android:clickable="true"
                android:textColor="@color/bg_gray_selector_textview"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="说两句"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_webview_comment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="28评"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <ImageView
            android:clickable="true"
            android:id="@+id/iv_webview_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/bottom_down_share_new"
            />
        <ImageView
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/bottom_down_picture_uncollect"

            />

        <ImageView
            android:clickable="true"
            android:id="@+id/iv_webview_font_size"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/bottom_down_size"
            />

    </LinearLayout>

</FrameLayout>